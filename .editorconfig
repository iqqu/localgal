root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
insert_final_newline = true
tab_width = 4

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[*.yml]
indent_size = 2
indent_style = space
tab_width = 2

[{*.htm,*.html,*.sht,*.shtm,*.shtml,*.gohtml}]
indent_size = 2
indent_style = space
tab_width = 2
ij_continuation_indent_size = 4
